generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String    @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  type        TransactionType // ENUM para 'INCOME' ou 'EXPENSE'
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Campo opcional para vincular a uma transação recorrente
  recurringTransactionId String?
  recurringTransaction   RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id])

  InvestmentTransaction InvestmentTransaction[]
}

model Category {
  id           String        @id @default(cuid())
  name         String        @unique
  transactions Transaction[]

  RecurringTransaction RecurringTransaction[]
}

model RecurringTransaction {
  id          String   @id @default(cuid())
  amount      Float
  description String
  type        TransactionType
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  frequency   Frequency // ENUM para 'MONTHLY', 'YEARLY', etc.
  startDate   DateTime
  endDate     DateTime?
  createdAt   DateTime @default(now())

  // Relação com as transações geradas
  generatedTransactions Transaction[]
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}


model Investment {
  id          String   @id @default(cuid())
  name        String   // Ex: "CDB Liquidez Diária"
  type        InvestmentType // Ex: FIXED_INCOME
  broker      String?  // Ex: "Nubank", "XP Investimentos"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions InvestmentTransaction[]
}

model InvestmentTransaction {
  id        String   @id @default(cuid())
  amount    Float    // Valor do aporte ou resgate
  date      DateTime
  type      InvestmentMovementType // CONTRIBUTION ou REDEMPTION
  createdAt DateTime @default(now())

  investmentId String
  investment   Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  // Link para a transação principal que reflete no caixa
  linkedTransactionId String?     @unique
  linkedTransaction   Transaction? @relation(fields: [linkedTransactionId], references: [id], onDelete: SetNull)
}

enum InvestmentType {
  FIXED_INCOME // Renda Fixa (CDB, Tesouro Direto)
  STOCKS       // Ações
  REITS        // Fundos Imobiliários (FIIs)
  CRYPTO       // Criptomoedas
  OTHER        // Outros
}

enum InvestmentMovementType {
  CONTRIBUTION // Aporte
  REDEMPTION   // Resgate
}